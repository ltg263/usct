<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:id="@+id/tv_cancel_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginLeft="@dimen/page_left_right_margin"
            android:textColor="@color/color_3"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_edit_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置名字"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/color_3"
            />
        <TextView
            android:id="@+id/tv_commit_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_bg_btn_blue"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="@dimen/page_left_right_margin"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_f5f6f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">


            <EditText
                android:id="@+id/et_input_cotent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昵称"
                android:textSize="16sp"
                android:background="@null"
                android:maxLength="10"
                android:textColor="@color/color_3" />


            <ImageView
                android:id="@+id/iv_edit_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/icon_edit_clear" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>