<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.frico.usct.widget.TranslucentActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/forget_login_pwd_intro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="如果您已忘记登录密码，可以在本页面重置登录密码，
后续可通过手机号 + 登录密码登录"
        android:textColor="@color/color_6"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="30dp">

        <com.frico.usct.widget.ClearWriteEditText
            android:id="@+id/et_user_phone"
            style="@style/MyEditText"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_login_phone2x"
            android:drawablePadding="15dp"
            android:hint="@string/please_et_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_3"
            android:textColorHint="@color/edit_da_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14dp" />

        <View
            style="@style/line"
            android:layout_width="265dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <com.frico.usct.widget.ClearWriteEditText
                android:id="@+id/et_msg_code"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_msg_code2x"
                android:drawablePadding="15dp"
                android:hint="@string/please_et_code"
                android:inputType="number"
                android:textColor="@color/color_3"
                android:textColorHint="@color/edit_da_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="90dp"
                android:text="@string/get_ver_code"
                android:textColor="@color/main_bule"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_width="265dp"
            android:layout_gravity="center_horizontal" />

        <com.frico.usct.widget.ClearWriteEditText
            android:id="@+id/et_pwd"
            style="@style/MyEditText"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_login_pwd2x"
            android:drawablePadding="15dp"
            android:hint="请设置密码(6-12位数字字母组合)"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_3"
            android:textColorHint="@color/edit_da_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14dp" />

        <View
            style="@style/line"
            android:layout_width="265dp"
            android:layout_gravity="center_horizontal" />

        <com.frico.usct.widget.ClearWriteEditText
            android:id="@+id/et_verify_pwd"
            style="@style/MyEditText"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_login_pwd2x"
            android:drawablePadding="15dp"
            android:hint="请确认密码(6-12位数字字母组合)"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_3"
            android:textColorHint="@color/edit_da_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14dp" />

        <View
            style="@style/line"
            android:layout_width="265dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_go_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="记起密码，去"
                    android:textColor="@color/color_c"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="@color/main_bule"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>



