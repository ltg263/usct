<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.frico.usct.widget.TranslucentActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码"
            android:textColor="@color/color_3"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入六位数字"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/color_3"
            android:textColorHint="@color/edit_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/color_3"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_pwd_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请确认支付密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/color_3"
            android:textColorHint="@color/edit_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/selector_bg_btn_blue"
        android:gravity="center"
        android:text="确定"
        android:enabled="false"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />
</LinearLayout>



