<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_group_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/page_left_right_margin"
                android:paddingRight="@dimen/page_left_right_margin">

                <ImageView
                    android:id="@+id/iv_tarbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/icon_left_back" />

                <TextView
                    android:id="@+id/tv_tarbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="我的团队"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--我的团队（团队首页）-->
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_director_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_item_group"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/page_left_right_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_group_tag"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/tag_group_director"

                        />

                    <TextView
                        android:id="@+id/tv_group_tag_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="董事"
                        android:textColor="@color/color_3"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直推"
                        android:textColor="@color/color_9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_my_group_first_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="129人"
                        android:textColor="@color/color_3"
                        android:textSize="18dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队"
                        android:textColor="@color/color_9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_my_group_count_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="629人"
                        android:textColor="@color/color_3"
                        android:textSize="18dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队收益"
                        android:textColor="@color/color_9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_my_group_sct_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6888.9866"
                        android:textColor="@color/color_3"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


            <!--我的团队（其他的会员信息）-->
            <LinearLayout
                android:id="@+id/ll_member_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_item_group"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/page_left_right_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/iv_member_my_group_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/header_default" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/tv_user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="会员ID:600156(总监)"
                            android:textSize="17dp"
                            />
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="157****2312"
                            android:textSize="13dp"
                            />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/im_my_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_manager"
                        android:layout_marginRight="10dp"
                        />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="直推"
                            android:textColor="@color/color_9"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_member_my_group_first_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="129人"
                            android:textColor="@color/color_3"
                            android:textSize="18dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="团队"
                            android:textColor="@color/color_9"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_member_my_group_count_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="629人"
                            android:textColor="@color/color_3"
                            android:textSize="18dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="团队收益"
                            android:textColor="@color/color_9"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_member_my_group_sct_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6888.9866"
                            android:textColor="@color/color_3"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <com.frico.easy_pay.refresh.RefreshGitHeaderView
        android:id="@+id/rotate_header_list_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_duration_to_close="1500"
        app:ptr_duration_to_close_header="1000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        app:ptr_ratio_of_header_height_to_refresh="1.0"
        app:ptr_resistance="3">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

    </com.frico.easy_pay.refresh.RefreshGitHeaderView>


</LinearLayout>