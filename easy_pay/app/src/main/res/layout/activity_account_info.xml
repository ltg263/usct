<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.frico.easy_pay.widget.TranslucentActionBar
        android:id="@id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f5f6f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_acount_header_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="@color/color_3" />

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/header_default" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mb_me_right2x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f7f7f7"
            android:layout_marginLeft="@dimen/page_left_right_margin"
            />

        <LinearLayout
            android:id="@+id/ll_acount_nickname_lay"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昵称"
                android:textSize="16sp"
                android:textColor="@color/color_3" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/color_3"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mb_me_right2x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f7f7f7"
            android:layout_marginLeft="@dimen/page_left_right_margin"
            />

        <LinearLayout
            android:id="@+id/ll_acount_phone_lay"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号"
                android:textSize="16sp"
                android:textColor="@color/color_3"
                />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15767894567"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/color_3"
                />


            <ImageView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mb_me_right2x" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>