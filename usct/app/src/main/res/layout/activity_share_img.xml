<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_share_img_shade"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_img_content"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_btn_close" />

        <RelativeLayout
            android:id="@+id/ll_bottom_lay"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_above="@+id/ll_bottom_btn_lay"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_share_bottom_circle_white">

            <LinearLayout
                android:id="@+id/bottom_left_content"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="34dp"
                    android:src="@drawable/launch_logo" />

                <TextView
                    android:id="@+id/bottom_my_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:text="我的ID:"
                    android:textColor="#333333"
                    android:textSize="17dp"

                    />

                <TextView
                    android:id="@+id/bottom_invite_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="邀请码:"
                    android:textColor="#333333"
                    android:textSize="17dp"

                    />


            </LinearLayout>


            <ImageView
                android:id="@+id/img_qr_code_img"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/bottom_left_content"
                android:src="@drawable/mb_yuyue_audit2x" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_btn_lay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="36dp"
            android:paddingRight="36dp">

            <ImageView
                android:id="@+id/img_btn_save_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_save" />

            <ImageView
                android:id="@+id/img_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/btn_share" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>