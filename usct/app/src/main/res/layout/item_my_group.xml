<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:background="@drawable/bg_item_group"
    android:orientation="horizontal"
    android:paddingLeft="19dp"
    android:paddingRight="17dp">

    <ImageView
        android:id="@+id/img_item_gourp_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/header_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="会员ID:"
            android:textSize="14dp"
            android:textColor="@color/color_9" />

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="手    机:"
            android:textSize="14dp"
            android:textColor="@color/color_9" />

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="余    额:"
            android:textSize="14dp"
            android:textColor="@color/color_9" />

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="团    队:"
            android:textSize="14dp"
            android:textColor="@color/color_9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600666"
            android:textColor="@color/color_6"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_item_group_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="157****6789"
            android:textColor="@color/color_6"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_item_group_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2345.8765 USCT"
            android:textColor="@color/color_6"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_item_group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52人"
            android:textColor="@color/color_6"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/page_left_right_margin"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/tv_item_group_class_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_chief"
            />
        <TextView
            android:id="@+id/tv_item_group_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总监"
            android:textColor="@color/color_3"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

</LinearLayout>