<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.frico.easy_pay.widget.TranslucentActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_setting_bell"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="通知铃声"
            android:textColor="@color/f666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close1" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_setting_safety"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/icon_setting_safety"
        android:drawableRight="@drawable/mb_me_right2x"
        android:drawablePadding="9dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="安全设置"
        android:textColor="@color/f666"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_setting_about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/icon_setting_about_us"
        android:drawableRight="@drawable/mb_me_right2x"
        android:drawablePadding="9dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="关于我们"
        android:textColor="@color/f666"
        android:textSize="14sp" />

</LinearLayout>