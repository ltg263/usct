<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_income_notify_pw_input"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="收款确认"
        android:textColor="#ff333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_top_count_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款金额："
                android:textColor="#ff666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_income_notify_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000.00"
                android:textColor="#ff4977ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_income_count_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#ff666666"
                android:textSize="16sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edit_input"
            android:hint="请输入支付密码"
            android:digits="0123456789"
            android:maxLength="6"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:inputType="numberPassword"
            android:textColorHint="#ffd5d5d5" />


        <LinearLayout
            android:id="@+id/ll_income_read_notification_conent_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/img_income_read_notification_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:button="@drawable/check_box_read_notify" />

            <TextView
                android:id="@+id/tv_notification_red_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="请仔细核对收款金额，否则造成的损失平台概不负责！"
                android:textColor="#fff93e3e"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_income_notify_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_dialog_bottom_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_income_notify_sure_btn"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_dialog_bottom_sure"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>